<!DOCTYPE html>
<html lang="en">
<head>
    <title>{{ title }}</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            font-family: verdana, serif;
            font-size:12px;
            border: 1px solid white;
        }
        th, td {
            border-bottom:3px solid white;
            border-right:3px solid white;
            padding: 15px;
            text-align: left;
        }
        th {
            background-color: darkgray;
        }
        td.n {
            background-color: lightgray;
        }
        td.e {
            background-color: lightgreen;
        }
    </style>
</head>
<body>
    <table>
        <thead>
            <tr>
                {% for header in headers %}
                    <th>{{ header }}</th>
                {% endfor %}
            </tr>
        </thead>
        <tbody>
            {% for translation_line in translation_lines %}
                <tr>
                    <td class="{{ translation_line.ne }}">{{ translation_line.source_text }}</td>
                    <td class="{{ translation_line.ne }}">{{ translation_line.with_translations }}</td>
                    <td class="{{ translation_line.ne }}">{{ translation_line.without_translations }}</td>
                    <td class="{{ translation_line.ne }}">{{ translation_line.with_vs_target_text }}</td>
                    <td class="{{ translation_line.ne }}">{{ translation_line.without_vs_target_text }}</td>
                    <td class="{{ translation_line.ne }}">{{ translation_line.with_translations_back }}</td>
                    <td class="{{ translation_line.ne }}">{{ translation_line.without_translations_back }}</td>
                    <td class="{{ translation_line.ne }}">{{ translation_line.check_with_translations }}</td>
                    <td class="{{ translation_line.ne }}">{{ translation_line.check_without_translations }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</body>
</html>
