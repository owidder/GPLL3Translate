<!DOCTYPE html>
<html lang="en">
<head>
    <title>{{ title }}</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            font-family: verdana, serif;
            font-size:12px;
            border: 1px solid white;
        }
        th, td {
            border-bottom:3px solid white;
            border-right:3px solid white;
            padding: 15px;
            text-align: left;
        }
        th {
            background-color: darkgray;
        }
        td {
            background-color: lightgray;
        }
        .endtd {
            border-right: 3px solid darkgray;
        }
        .openai {
            background-color: lightblue;
        }
        .gemini {
            background-color: lightgray;
        }
        .claude {
            background-color: lightgoldenrodyellow;
        }
        .mistral {
            background-color: lightskyblue;
        }
        .llama3 {
            background-color: rgba(241, 181, 181, 0.50);
        }
        .source {
            background-color: palegoldenrod;
        }
    </style>
</head>
<body>
    <table>
        <thead>
            <tr>
                {% for header in headers %}
                    <th>{{ header }}</th>
                {% endfor %}
            </tr>
        </thead>
        <tbody>
            {% for translation_line in translation_lines %}
                <tr>
                    <td class="endtd source">{{ translation_line.source_text }}</td>
                    <td class="openai">{{ translation_line.translation_openai }}</td>
                    <td class="gemini">{{ translation_line.translation_gemini }}</td>
                    <td class="claude">{{ translation_line.translation_claude }}</td>
                    <td class="mistral">{{ translation_line.translation_mistral }}</td>
                    <td class="llama3">{{ translation_line.translation_llama3 }}</td>
                    <td class="endtd openai">{{ translation_line.compare_openai }}</td>
                    <td class="gemini">{{ translation_line.compare_gemini }}</td>
                    <td class="claude">{{ translation_line.compare_claude }}</td>
                    <td class="mistral">{{ translation_line.compare_mistral }}</td>
                    <td class="llama3">{{ translation_line.compare_llama3 }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</body>
</html>
