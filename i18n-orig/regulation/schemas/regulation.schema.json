  "title": "Regulation",
  "description": "A regulation defines the impact over time on service-variants of a service type. It can change the shares out of which the service type consists.",
  "type": "object",
  "properties": {
    "regulation": {
      "description": "The descriptor of this regulation. Must be unique.",
      "type": "string"
    },
    "region": {
      "description": "The region this regulation takes effect in as 3-letter ISO code (e.g. ITA for Italy) including a special region code 'GLOBAL'. Use this when a regulation has an effect on all regions",
      "$ref": "#/definitions/iso3Country"
    },
    "impacts": {
      "description": "Lists all impacted service types of regulation.",
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "serviceType": {
            "description": "The name of the service type on which this regulation has an impact on.",
            "type": "string"
          },
          "regulate": {
            "description": "A list of service variants for this service type which are to be regulated by this regulation. Not all service variants for a service type need to be listed. Only the ones the regulation regulates.",
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "properties": {
                "serviceVariant": {
                  "description": "The name of the service variant this service type consists of.",
                  "type": "string"
                },
                "to": {
                  "description": "Describes the change over time on the share of this service variant as a list of functions. The change is described as trajectory which consists of a list of functions (e.g. linear, step)",
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "object",
                    "properties": {
                      "direction": {
                        "description": "The direction of the change. E.g is the share increasing or decreasing",
                        "$ref": "#/definitions/directionType"
                      },
                      "value": {
                        "description": "The end-value in percent (%) of the share of this service variant after the given timeframe",
                        "type": "number",
                        "minimum": 0,
                        "maximum": 100
                      },
                      "type": {
                        "description": "The shape of the change over time expressed as a function type (e.g. linear or step)",
                        "$ref": "#/definitions/functionType"
                      },
                      "timeframe": {
                        "description": "The time frame in years of the change.",
                        "type": "integer",
                        "minimum": 1
                      },
                      "offset": {
                        "description": "the offset in years this change is starting to take effect. This can be used to model lead-times where nothing happens. If not explicitly set there is no offset taken into account.",
                        "type": "integer",
                        "minimum": 1
                      }
                    },
                    "required": [
                      "direction",
                      "value",
                      "type",
                      "timeframe"
                    ]
                  }
                }
              },
              "required": [
                "serviceVariant",
                "to"
              ]
            }
          }
        },
        "requires": [
          "serviceType",
          "regulate"
        ]
      }
    }
  },
  "required": [
    "regulation",
